<% unread_notifications = User.current.notifications.unread %>
<li class="dropdown">
  <a data-toggle="dropdown" href="">
    <i class="tm-icon zmdi zmdi-notifications"></i>
    <% if unread_notifications.count > 0  %>
    <i class="tmn-counts"><%= unread_notifications.count %></i>
    <% end %>
  </a>
  <div class="dropdown-menu dropdown-menu-lg pull-right">
    <div class="listview" id="notifications">
      <div class="lv-header">
        Notifications
        <ul class="actions">
          <li class="dropdown">
            <a href="" data-clear="notification">
              <i class="zmdi zmdi-check-all"></i>
            </a>
          </li>
        </ul>
      </div>
      <div class="lv-body">
        <% User.current.notifications.sorted.each_with_index do |n,i| %>
          <% if i < 10 %>
            <a class="lv-item" href="">
              <div class="media">
                <div class="pull-left">
                <% if n.read? %>
                  <tr>
                    <span>
                      <td>
                        <div class="col-sm-4" data-name="circle" data-code="f26d"><p><i class="zmdi zmdi-circle-o"></i></p></div>
                      </td>
                    </span>
                <% else %>
                  <tr class="c-black">
                    <span>
                      <td>
                        <div class="col-sm-4" data-name="circle" data-code="f26d"><p><i class="zmdi zmdi-dot-circle"></i></p></div>
                      </td>
                    </span>
                <% end %>
                  <img class="lv-img-sm" src= <%= asset_path("profile-pics/#{i+1}.jpg") %>  alt="">
                </div>
                <div class="media-body">
                  <div class="lv-title"><%= n.sender_display %>
                  </div>
                  <small class="lv-small"><%= n.summary %></small>
                </div>
              </div>
            </a>
          <% end %>
        <% end %>
      </div>

      <%= link_to("<a class='lv-footer' style='color:royalblue' href=''>View All".html_safe, edit_user_path(User.current, anchor: "tab-notifications")) %>
    </div>

  </div>
</li>
