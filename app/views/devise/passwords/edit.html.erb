<body class="login-content">
  <div class="lc-block toggled" id="l-login">
    <h2>Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token, as: :hidden %>
          <div class="input-group m-b-20">
            <span class="input-group-addon"></span>
            <div class="fg-line">
              <%= f.label :password %>
              <%= f.password_field(:password, required: true, class: 'form-control', placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)) %>
            </div>
          </div>
          <div class="input-group m-b-20">
            <span class="input-group-addon"></span>
            <div class="fg-line">
              <%= f.label :password_confirmation, 'Confirmation' %>
              <%= f.password_field :password_confirmation, required: true, class: 'form-control', placeholder: "enter password again to confirm" %>
            </div>
          </div>

          <div class="clearfix"></div>
          <%= f.submit 'Change Password', :class => 'btn bgm-tertiary float-right' %>
          <div class="input-group m-b-20">
            <p class="help-inline p-t-20 text-muted">
              Return to login?
              <%= link_to "Sign In", new_user_session_path %>
            </p>
          </div>
    <% end %>
